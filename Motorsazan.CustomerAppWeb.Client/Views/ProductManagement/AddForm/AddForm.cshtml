    <div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">
        <div class="app__form-item">
            <label class="app__form-label">
                دسته بندی محصول
            </label>
            <div id="addFormProductCategoryComboParent">
                @{
                    Html.RenderAction("AddFormProductCategoryCombo", "ProductManagement");

                }
            </div>
            <div class="app__form-error app__hide" id="addFormProductCategoryComboError">
                دسته بندی محصول انتخاب نشده است
            </div>

        </div>
    </div>
    <div class="col-xs-12 col-md-12">
        <div class="app__form-item">
            <label class="app__form-label">
                نوع موتور
            </label>
            <div id="addFormEngineTypeParent">
                @Html.DevExpress().TextBox(settings =>
                {
                    settings.Name = "addFormEngineTypeTextBox";
                    settings.Properties.NullText = "";
                    settings.ClientEnabled = false;
                    settings.Properties.ClientSideEvents.ValueChanged =
                        "motorsazanClient.productManagement.handleAddFormEngineTypeTextBoxValueChanged";

                }).GetHtml()
            </div>
            <div class="app__form-error app__hide" id="addFormEngineTypeError">
                نوع موتور انتخاب نشده است
            </div>

        </div>
    </div>
