            <label class="app__form-label">
                تعداد سیلندر
            </label>
            <div id="addFormNumberOfCylinderParent">
                @Html.DevExpress().SpinEdit(settings =>
                {
                    settings.Name = "addFormNumberOfCylinder";
                    settings.Properties.MinValue = 0;
                    settings.Properties.MaxValue = 20;
                    settings.Properties.ShowOutOfRangeWarning = false;
                    settings.ClientEnabled = false;
                    settings.Properties.ClientSideEvents.ValueChanged =
                        "motorsazanClient.productManagement.handleAddFormNumberOfCylinderValueChanged";
                }).GetHtml()
            </div>
            <div class="app__form-error app__hide" id="addFormNumberOfCylinderError">
